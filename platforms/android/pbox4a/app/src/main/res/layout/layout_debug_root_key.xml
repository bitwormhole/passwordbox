<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DebugRootKeyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:padding="10dp"
        android:text="UI: debug Root Key"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="#000077"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Public Key"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_output_public_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#dddddd"
            android:padding="10dp"
            android:text="output"
            android:textColor="#555555"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button_load_public_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load PK" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="#007700"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Secret Key"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_output_secret_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#dddddd"
            android:padding="10dp"
            android:text="output"
            android:textColor="#555555"
            android:textSize="15dp" />


        <Button
            android:id="@+id/button_load_secret_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load SK" />

    </LinearLayout>


</LinearLayout>